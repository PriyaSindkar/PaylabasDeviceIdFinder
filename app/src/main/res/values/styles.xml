<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PaylabasLogoImg">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_50</item>
        <item name="android:layout_marginRight">@dimen/margin_50</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:background">@drawable/headerlogo</item>
    </style>s

    <style name="BtnStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margin_top</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/edittext_margin_left</item>
        <item name="android:layout_marginRight">@dimen/edittext_margin_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:background">@drawable/selectable_button</item>
    </style>

</resources>
